<UserControl x:Class="LFA_WPF.Third.KeyBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LFA_WPF.Third"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Key : " Margin="5" FontSize="20" Grid.ColumnSpan="2"  Grid.Row="0" VerticalAlignment="Center"/>
        <Button FontSize="17" Content="Random" Margin="5" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" x:Name="buttonRandom" Padding="5"/>
        <TextBox x:Name="inputKey" FontSize="20" VerticalAlignment="Top" Margin="5" Height="100" Grid.Row="1" MaxLines="5" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
