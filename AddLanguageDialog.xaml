<Window x:Class="Cryptology.AddLanguageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cryptology"
        mc:Ignorable="d"
        Title="AddLanguageDialog" Height="200" Width="500">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock Text="Language name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="10 0 0 0"/>
		<TextBox Grid.Row="0" Grid.Column="1" x:Name="nameInput" VerticalAlignment="Center" Padding="5" Margin="20 0 20 0"/>
        <TextBlock Text="Language alphabet (through comma)" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="10 0 0 0"/>
		<TextBox Grid.Row="1" Grid.Column="1" x:Name="alphabetInput" VerticalAlignment="Center" Padding="5" Margin="20 0 20 0"/>
		<Button Content="Confirm" Click="Confrim" Grid.ColumnSpan="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10"/>
	</Grid>
</Window>
